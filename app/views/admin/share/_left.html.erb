<div class="jui_left">
  <div class="toggleCollapse">
    <h2>主菜单</h2>
  </div>
  <div class="accordion">
    <% if params[:controller] == "admin/tours" %>
    <div class="accordionHeader">
      <h2 class="collapsable">
        <span>Folder</span>
        景点管理
      </h2>
    </div>
    <div class="accordionContent">
      <%= link_to "景点查询", admin_tours_path, class: "jui_menu_item selected" %>
      <br/>
      <%= link_to "新增查询", new_admin_tour_path, class: "jui_menu_item " %>
    </div>
    <div class="accordionHeader">
      <h2>
        <span>Folder</span>
        门票管理
      </h2>
    </div>
    <div class="accordionContent">
      <a class="jui_menu_item" href="#">门票查询</a>
      <br/>
      <a class="jui_menu_item" href="#">新增门票</a>
    </div>
  </div>
  <% end %>
  <% if params[:controller] == "admin/user" %>
  <div class="accordionHeader">
    <h2 class="collapsable">
      <span>Folder</span>
      用户管理
    </h2>
  </div>
  <div class="accordionContent">
    <%= link_to "用户查询", admin_users_path, class: "jui_menu_item selected" %>
  </div>
  <% end %>
</div>
