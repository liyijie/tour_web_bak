<div class="window">
  <table class="order_table margintop10" cellspacing="0" cellpadding="0">
    <tr>
      <td class="left" valign="top">
        <ul>
          <li>
            <a href="#" class="org active menu_font_size">我的订单</a>
          </li>
          <li>
            <a href="#" class="org menu_font_size">个人信息</a>
          </li>
        </ul>
      </td>
      <td class="split">
      </td>
      <td class="right">
        <div class="menu">
          <ul>
            <li class="first">
              <a id="btnAll" class="org active menu_font_size">所有订单</a>
            </li>
            <li>
              <a id="btnTour" class="org menu_font_size">景点订单</a>
            </li>
            <li>
              <a id="btnHotel" class="org menu_font_size">酒店订单</a>
            </li>
            <li class="last">
              <a href="#"><%= image_tag "icon_del.png" %>订单回收站</a>
            </li>
          </ul>
        </div>
        <div id="orderDiv" class="order_list_div">
          <table class="order_list_table" cellpadding="0" cellspacing="0">
            <tr>
              <th width="250px">订单信息</th>
              <th>订单时间</th>
              <th>订单金额</th>
              <th>订单状态</th>
              <th width="130px">操作</th>
            </tr>
            <% @tour_orders.each do |tour_order| %>
            <tr>
              <td>
                <%= image_tag tour_order.ticket.tour.image_thumb %>
                <span>订单号：<%= tour_order.id %></span>
              </td>
              <td>
                <%= tour_order.created_at.strftime("%Y-%m-%d %H:%M:%S") %><br/>
              </td>
              <td>
                ￥<%= tour_order.total_price %><br/>
              </td>
              <td>
                <%= tour_order.human_state %>
              </td>
              <td>
                <%= link_to("查看", tour_order , class: "op_font_color") %>
                <%= link_to(" | 支付", pay_tour_order_path(tour_order) , class: "op_font_color", method: "post") if tour_order.may_pay? %>
                <%= link_to(" | 取消", cancel_tour_order_path(tour_order) , class: "op_font_color", method: "post") if tour_order.may_cancel? %>
                <%= link_to(" | 退款", refund_tour_order_path(tour_order) , class: "op_font_color", method: "post") if tour_order.may_refund? %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </td>
    </tr>
  </table>
</div>