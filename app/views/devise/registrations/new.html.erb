<div class="register">
  <div class="window">
    <div class="main">
      <%= devise_error_messages! %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="content">
        <ul>
          <li class="font">使用邮箱注册</li>
          <li>
            <%= f.email_field :email, autofocus: true, placeholder: "邮箱" %>
            <span>用于登录和找回密码</span>
          </li>
          <li>
            <%= f.password_field :password, autocomplete: "off", placeholder: "密码" %>
            <span>6~16个字符，区分大小写</span>
          </li>
          <li>
            <%= f.password_field :password, autocomplete: "off", placeholder: "确认密码" %>
            <span>请再次填写密码</span>
          </li>
          <li>
            <%= f.submit "注册", class: "btnReg" %>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
